<%= form_for(@event) do |f| %>
	<% if @event.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
			<ul>
				<% @event.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="input-group input-group-sm">
		<%= f.label :title %><br>
		<%= f.text_field :title, :class => "form-control" %>
	</div>
	<div class="field">
		<%= f.label :star_date %><br>
		<%= f.datetime_select :star_date %>
	</div>
	<div class="field">
		<%= f.label :end_date %><br>
		<%= f.datetime_select :end_date %>
	</div>
	<div cclass="input-group input-group-sm">  
		<%= f.label :all_tags, "List All Tags, separate each tag by a comma" %><br />
		<%= f.text_field :all_tags, :class => "form-control"  %>
	</div>
	<div class="input-group input-group-sm">
		<%= f.label :location %><br>
		<%= f.text_field :location, :class => "form-control"  %>
	</div>
	<div class="field">
		<%= f.label :address %><br>
		<%= f.text_area :address %>
	</div>
	<div class="field">
		<%= f.label :agenda %><br>
		<%= f.text_area :agenda, :cols => 50, :rows => 10 %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
